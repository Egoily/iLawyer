<UserControl x:Class="ee.iLawyer.UserControls.TCtr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ee.iLawyer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="{Binding DataContext.PropertyName}"></TextBlock>
            <TextBlock Text="{Binding DataContext.Icon}"></TextBlock>
        </StackPanel>

    </Grid>
</UserControl>
